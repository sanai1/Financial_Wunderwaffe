<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_color"/>

    <TextView
        style="@style/TextViewLabelWelcome"

        android:id="@+id/textView4"
        android:text="@string/log_in"
        android:textSize="35sp"
        android:layout_marginTop="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        style="@style/EditTextWelcome"

        android:id="@+id/editTextTextEmailAddressLogIn"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="150sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        style="@style/EditTextWelcome"

        android:id="@+id/editTextNumberPasswordLogIn"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:layout_marginTop="100sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddressLogIn" />

    <Button
        style="@style/ButtonWelcome"

        android:id="@+id/buttonResumeLogIn"
        android:text="@string/resume"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPasswordLogIn" />

    <TextView
        style="@style/TextViewClickWelcome"

        android:id="@+id/textViewBackLogIn"
        android:text="@string/back"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResumeLogIn" />


</androidx.constraintlayout.widget.ConstraintLayout>