<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutColorCategory"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/restangle_rounded_all"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textViewCategoryTitle"
        style="@style/TextViewInfoLK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left|center" />

    <ImageView
        android:id="@+id/imageViewCategoryInfo"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:importantForAccessibility="no"
        app:srcCompat="@mipmap/ic_right_arrow_foreground" />
</LinearLayout>