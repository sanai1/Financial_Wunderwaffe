<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonWelcome" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextWelcome">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/purple_500</item>
        <item name="android:ems">12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewInfoWelcome">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewLabelWelcome" parent="TextViewInfoWelcome">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextViewClickWelcome" parent="TextViewInfoWelcome">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonGripCode" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="TextViewInfoLK">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ImageViewArrowLK">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearLayoutInfoLK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>\
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="LinearLayoutInfoLK.Drawable" parent="LinearLayoutInfoLK">
        <item name="android:background">@drawable/rectangle_rounded_all_light_gray</item>
    </style>

    <style name="LinearLayoutInfoLK.Drawable.Elevation" parent="LinearLayoutInfoLK.Drawable">
        <item name="android:elevation">10dp</item>
    </style>

    <style name="RadioButtonTest">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/answer</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="TextViewInfoBriefcase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MenuIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewInTableLayoutShareOfAssetsMain">
        <item name="android:width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewInTableLayoutShareOfAssetsMain.Bold" parent="TextViewInTableLayoutShareOfAssetsMain">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#6200EE</item>
        <item name="popupTheme">@style/PopupMenuStyle</item>
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
    </style>

    <style name="NavMenuStyle" parent="Widget.Material3.NavigationView">
        <item name="paddingTopNoTitle">25dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NavMenuItemTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CheckBox">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>